.row
  .col-xs-3
    form(novalidate, name='priorityForm', role='form')
      .form-group
        label(for='name') Name
        input.form-control#name(name='name', type='text', ng-model='priority.name', ng-minlength='3', required, autofocus)
      .form-group
        label(for='color') Color
        input.form-control#color(name='color', type='color', ng-model='priority.color', required)
      .form-group
        button.btn.btn-success(ng-show='priorityForm.$valid', ng-click='add()') Add Priority
  .col-xs-9

.col-xs-3
  .radio
    label
      h3 Sort By:
      input(name='sort', type='radio', ng-model='sort', value='name')
      span Ascending
  .radio
    label
      input(name='sort', type='radio', ng-model='sort', value='-name')
      span Descending
  table.table.table-hover.table-border
    thead
      tr
        th Name
        th Color
    tbody
      tr(ng-repeat='p in priorities | orderBy:sort', ng-style='{"background-color":p.color}')
        td {{p.name}}
        td {{p.color}}
